<UserControl x:Class="WpfApp2.examples.dock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp2.examples"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Button Height="50" DockPanel.Dock="Bottom"></Button>
        <Button Height="50" DockPanel.Dock="Top"></Button>
        <Button Width="50" DockPanel.Dock="Left"></Button>
        <Button Width="50" DockPanel.Dock="Right"></Button>
    </DockPanel>
</UserControl>
