<Window x:Class="number.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:number"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label x:Name="L1" HorizontalAlignment="Center" FontSize="30" Grid.Row="0" />
        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Label FontSize="20" HorizontalAlignment="Left">Введите число:</Label>
            <TextBox x:Name="TextNumber" FontSize="20" Text="0" />
        </DockPanel>
        <Button Grid.Row="2" FontSize="20" Width="100" Click="ButtonBase_OnClick">Угадать!</Button>
        <Label x:Name="LabelRes" FontSize="15" HorizontalAlignment="Center" Grid.Row="3" Content="Пока числа нет" />
        <Label x:Name="LabelAtt" FontSize="15" HorizontalAlignment="Center" Grid.Row="4" />
    </Grid>
</Window>