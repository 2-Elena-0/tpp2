<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="310">
        <Grid LayoutUpdated="UIElement_OnLayoutUpdated">
        <TextBlock x:Name="MainText" HorizontalAlignment="Right" FontSize="50" Margin="0 0 30 0"> </TextBlock>

        <Button Width="60" Height="60" Margin="10 100 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="+"
                x:Name="Plus" 
                Click="operated" MouseEnter="decrease_animation" MouseLeave="increase_animation">
        </Button>
        <Button Width="60" Height="60" Margin="80 100 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="-"
                x:Name="Minus" 
                Click="operated" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="150 100 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="*"
                x:Name="Multiply" 
                Click="operated" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="220 100 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="/"
                x:Name="Divide" 
                Click="operated" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="10 170 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="1"
                x:Name="One" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="80 170 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="2"
                x:Name="Two" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="150 170 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="3"
                x:Name="Three" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="220 170 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="4"
                x:Name="Four" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="10 240 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="5"
                x:Name="Five" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="80 240 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="6"
                x:Name="Six" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="150 240 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="7"
                x:Name="Seven" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="220 240 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="8"
                x:Name="Eight" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="10 310 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="9"
                x:Name="Nine" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="80 310 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="0"
                x:Name="Zero" 
                Click="SetNumber" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="150 310 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="C"
                x:Name="Clean" 
                Click="Cleaned" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
        <Button Width="60" Height="60" Margin="220 310 0 0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                FontSize="40" Content="="
                x:Name="Equals" 
                Click="result" MouseEnter="decrease_animation" MouseLeave="increase_animation"/>
    </Grid>
</Window>